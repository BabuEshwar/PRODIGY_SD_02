import java.util.Random;
import java.util.Scanner;

public class GuessingGame {

    // Generates a random number within the given bounds
    private static int generateRandomNumber(int min, int max) {
        Random rand = new Random();
        return rand.nextInt((max - min) + 1) + min;
    }

    // Runs the guessing game
    public static void main(String[] args) {
        final int LOWER_BOUND = 1;
        final int UPPER_BOUND = 100;

        int targetNumber = generateRandomNumber(LOWER_BOUND, UPPER_BOUND);
        int attempts = 0;

        Scanner scanner = new Scanner(System.in);

        System.out.println("=======================================");
        System.out.println("ðŸŽ® Welcome to the Number Guessing Game!");
        System.out.println("=======================================");
        System.out.printf("I have picked a number between %d and %d.%n", LOWER_BOUND, UPPER_BOUND);
        System.out.println("Can you guess it? Enter your number:");

        while (true) {
            System.out.print("Your guess: ");
            String input = scanner.nextLine();

            int guess;
            try {
                guess = Integer.parseInt(input.trim());
            } catch (NumberFormatException e) {
                System.out.println("â›” Invalid input! Please enter an integer value.");
                continue;
            }

            attempts++;

            if (guess < targetNumber) {
                System.out.println("Too low! Try again.");
            } else if (guess > targetNumber) {
                System.out.println("Too high! Try again.");
            } else {
                System.out.printf("ðŸŽ‰ Congratulations! You guessed the number %d in %d attempts.%n", targetNumber, attempts);
                break;
            }
        }

        scanner.close();
        System.out.println("Game Over. Thank you for playing!");
    }
}
